                    </th>
                    <th>
                        Fascia 1
                    </th>
                    <th>
                        Fascia 2
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.FasceOrarie)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.B1_Inizio_Ora):@Html.DisplayFor(modelItem => item.B1_Inizio_Minuti)
                            -
                            @Html.DisplayFor(modelItem => item.B1_Fine_Ora):@Html.DisplayFor(modelItem => item.B1_Fine_Minuti)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.B2_Inizio_Ora):@Html.DisplayFor(modelItem => item.B2_Inizio_Minuti)
                            -
                            @Html.DisplayFor(modelItem => item.B2_Fine_Ora):@Html.DisplayFor(modelItem => item.B2_Fine_Minuti)
                        </td>
                        <td>
                            @Html.ActionLink("Edit","Edit", new { controller = "FasceOrarie", id = item.Codice })
                            @Html.ActionLink("Delete", "Delete", new { controller = "FasceOrarie", id = item.Codice })
                        </td>
                    </tr>
                }
            </table>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.IdProfiloOrario }) |
            @Html.ActionLink("Back to List", "Index")
        </p>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        Footer
    </div>
    <!-- /.box-footer-->
</div>
<!-- /.box -->

