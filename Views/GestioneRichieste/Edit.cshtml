@model wtime.Models.Richiesta

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Richiesta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdRichiesta)
        @Html.HiddenFor(model => model.IdOperatore)
        @Html.HiddenFor(model => model.IdTipoRichiesta)
        @Html.HiddenFor(model => model.Giornaliera)
        @Html.HiddenFor(model => model.DataInizio)
        @Html.HiddenFor(model => model.OraInizio)
        @Html.HiddenFor(model => model.MinutiInizio)
        @Html.HiddenFor(model => model.DataFine)
        @Html.HiddenFor(model => model.OraFine)
        @Html.HiddenFor(model => model.MinutiFine)


        <div class="form-group">
            @Html.LabelFor(model => model.IdOperatore, "IdOperatore", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Model.Operatore.Cognome @Model.Operatore.Nome</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTipoRichiesta, "IdTipoRichiesta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.TipoRichiesta.Nome)</p>
            </div>
        </div>

        <div class="form-group">
            <label>Inizio</label>
            <div class="col-md-10">
                <p class="form-control-static">
                    @String.Format("{0: dd/MM/yyyy} {1:D2}:{2:D2}",
                                        Model.DataInizio,
                                        Model.OraInizio,
                                        Model.MinutiInizio)
                </p>
            </div>
        </div>

        <div class="form-group">
            <label>Fine</label>
            <div class="col-md-10">
                <p class="form-control-static">
                    @String.Format("{0: dd/MM/yyyy} {1:D2}:{2:D2}",
                                        Model.DataFine,
                                        Model.OraFine,
                                        Model.MinutiFine)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTipoStatus, "IdTipoStatus", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdTipoStatus", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTipoStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Html.DisplayFor(m => m.DataStatus)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", row = 5 } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
