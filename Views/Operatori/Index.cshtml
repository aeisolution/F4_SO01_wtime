@model IEnumerable<wtime.Models.Operatore>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<!-- BOX DI TABELLA CON GRAFICA -->
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Elenco Operatori</h3>
        <div class="box-tools">
            <form class="form-inline" action="/Operatori/" method="GET" >
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="query" class="form-control pull-right" placeholder="Search" value="@ViewBag.search">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cognome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodiceFiscale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascita)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cognome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodiceFiscale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascita)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }


        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->